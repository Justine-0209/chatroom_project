<!DOCTYPE html>
<html lang="en">
    <head>
        <title>All Chatrooms</title>
        <% include ../partials/head %>
    </head>

    <body>

        <header>
            <% include ../partials/header %>
        </header>
        
        <main>
            <h1>All chatrooms</h1>
            <div>
                    <a class="btn-floating btn-large waves-effect waves-light red" href="create-chatroom"><i class="material-icons">add</i></a>
                    <a class="waves-effect waves-light btn" href="chatroom">Chatroom</a>

                    
                        <% for(var i=0; i<results.length; i++) {%>
                            
                                <div class="card">
                                    <div class="card-image waves-effect waves-block waves-light">
                                        <img class="activator" src="images/chatroom/<%= results[i].chatroom_picture %>">
                                        </div>
                                        <div class="card-content">
                                        <span class="card-title activator grey-text text-darken-4"><%= results[i].title %><i class="material-icons right">more_vert</i></span>
                                        <p><a href="#">This is a link</a></p>
                                        </div>
                                        <div class="card-reveal">
                                        <span class="card-title grey-text text-darken-4"><%= results[i].title %><i class="material-icons right">close</i></span>
                                        <p><%= results[i].description %></p>
                                    </div>
                                </div>
                            
                        <% } %>
                    


                    

            </div>
        </main>
    
        <footer class="page-footer">
            <% include ../partials/footer %>
        </footer>
    
    </body>
</html>